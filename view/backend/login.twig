{% extends "backend/homePageTemplate.twig" %} 

{% block navigation %}{% endblock %}

{% block content %}

    <body class="bg-dark py-5">

        <div class="container">
            {% if message == 'error' %}
                <div class="alert alert-danger" role="alert">
                    Login ou mot de passe incorrect.
                </div>
            {% elseif message == 'empty' %}
                <div class="alert alert-warning" role="alert">
                    Veuillez rentrer le login et le mot de passe.
                </div> 

            {% endif %}
            <div class="card card-login mx-auto mt-5">
                <div class="card-header">Authentification</div>
                <div class="card-body">

                    <form action="/auth/login" method="post">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Utilisateur</label>
                            <input class="form-control" name="username"  type="text" aria-describedby="emailHelp" placeholder="utilisateur">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Mot de passe</label>
                            <input class="form-control" name="password"  type="password" placeholder="Mot de passe">
                        </div>
                        <input type="hidden" name="token" id="token" value="{{ token }}" />
                        <input class=" btn" type="submit" value="Valider">
                    </form>

                    <div class="col">
                        <a href="/blog/home">Retour sur le site</a>
                    </div>


                </div>
            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    </body>
{% endblock %}


