{% extends "/backend/homePageTemplate.twig" %} 


{% block content %}
    <div class="content-wrapper">
        <div class="container-fluid">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/back">Accueil </a>/ <b>Gestion des articles</b>
                </li>
            </ol>

            <div class="row">

                <div class="col-3">
                    <div class="card">

                        <div class="card-header">
                            Ajouter un article
                        </div>
                        <div class="card-body">

                            <a href="/post/postform"><button type="button" class="btn btn-primary"> Ajouter</button></a>

                        </div>

                    </div>
                </div>
                <div class="col-9">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-table"></i> Liste des articles</div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>#Id</th>
                                            <th>Titre</th>
                                            <th>Chapeau</th>
                                            <th>date</th>
                                            <th>Utilisateur</th>
                                            <th>Publié</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>#Id</th>
                                            <th>Titre</th>
                                            <th>Chapeau</th>
                                            <th>date</th>
                                            <th>Utilisateur</th>
                                            <th>Publié</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {% for post in posts %}
                                            <tr>
                                                <td>{{ post.id }}</td>
                                                <td>{{ post.title }}</td>
                                                <td>{{ post.chapeau }}</td>
                                                <td>{{ post.lastDate }}</td>
                                                <td>{{ post.userId }}</td>
                                                <td>{{ post.published }}</td>
                                                <td>
                                                    <a href="/post/modifypost/{{ post.id }}"><button type="button" class="btn btn-primary">Modifier</button></a>
                                                    <a href="/post/deletepost/{{ post.id }}"><button type="button" class="btn btn-danger">Supprimer</button></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer small text-muted">Dernière mise à jour le {{ lastDate }}</div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}